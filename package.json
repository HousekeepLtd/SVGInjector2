{
  "name": "svg-injector",
  "description": "Fast, caching, dynamic inline SVG DOM injection library",
  "version": "2.0.0",
  "author": {
    "name": "Iconic",
    "email": "yourfriends@useiconic.com",
    "url": "https://useiconic.com/"
  },
  "main": "dist/svg-injector.js",
  "homepage": "https://github.com/iconic/SVGInjector",
  "repository": {
    "type": "git",
    "url": "https://github.com/iconic/SVGInjector"
  },
  "keywords": [
    "SVG",
    "Scalable Vector Graphics",
    "SVG injector",
    "images",
    "img",
    "html",
    "DOM"
  ],
  "license": "MIT",
  "devDependencies": {
    "jshint": "^2.5.0",
    "uglify-js": "^2.4.13",
    "github-changes": "0.0.11"
  },
  "scripts": {
    "test": "jshint svg-injector.js",
    "build":      "uglifyjs ./src/svg-injector.js                                            --stats --enclose window,document:window,document --compress drop_console=true                                 --mangle --comments        --define STANDALONE=true --output ./dist/svg-injector.min.js",
    "buildDBG":   "uglifyjs ./src/svg-injector.js                                            --stats --enclose window,document:window,document --compress drop_console=false,dead_code=true,sequences=false --beautify quote_style=1   --define STANDALONE=true --output ./dist/svg-injector.js  --source-map ./dist/svg-injector.map.js",
    "buildNG":    "uglifyjs ./src/svg-injector.js ./src/app/svginjector.js ./src/app/**/*.js --stats                                           --compress drop_console=true                                 --mangle --comments        --define STANDALONE=false --output ./dist/ng-svg-injector.min.js",
    "buildNGDBG": "uglifyjs ./src/svg-injector.js ./src/app/svginjector.js ./src/app/**/*.js --stats                                           --compress drop_console=false,dead_code=true,sequences=false --beautify quote_style=1   --define STANDALONE=false --output ./dist/ng-svg-injector.js --source-map ./dist/ng-svg-injector.map.js",
    "changelog": "github-changes -o iconic -r SVGInjector --use-commit-body",
    "changelog-post": "git add CHANGELOG.md && git commit -m 'Updated CHANGELOG'",
    "release": "for TASK in (test build changelog changelog-post tag); do npm run $TASK; done",
    "tag": "git tag ${npm_package_version} && git push --tags",
    "test-version": "bash -c 'echo $npm_package_version'"
  }
}
